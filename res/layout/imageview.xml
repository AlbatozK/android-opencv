<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/ivBkgrn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/airplane" />
    <Button
        android:id="@+id/btSetBkgrn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Wallpaper" />
    <Button
        android:id="@+id/btDoProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click" />

<HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivDisplay01"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:src="@drawable/baboon" />
    <ImageView
        android:id="@+id/ivDisplay02"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/fruits" />
	<ImageView
        android:id="@+id/ivDisplay03"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/lena" />
	<ImageView
        android:id="@+id/ivDisplay04"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/puzzle" />
	<ImageView
        android:id="@+id/ivDisplay05"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/stuff" />
	<ImageView
        android:id="@+id/ivDisplay06"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:src="@drawable/box" />
</LinearLayout>
</HorizontalScrollView>
	
</LinearLayout>